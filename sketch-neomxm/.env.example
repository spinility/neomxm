# Sketch-NeoMXM Configuration
# Copy this file to .env and fill in your API keys

# ============================================================================
# API Keys - Required for model access
# ============================================================================

# Anthropic (Claude models)
ANTHROPIC_API_KEY=your_anthropic_key_here

# OpenAI (GPT models including gpt-5-nano if available)
OPENAI_API_KEY=your_openai_key_here

# DeepSeek (for deepseek-reasoner)
DEEPSEEK_API_KEY=your_deepseek_key_here

# ============================================================================
# Cortex Configuration
# ============================================================================

# Enable/disable the cortex expert system
CORTEX_ENABLED=true

# Directory containing expert profiles
CORTEX_PROFILES_DIR=cortex/profiles

# Directory for cortex logs
CORTEX_LOGS_DIR=cortex/logs

# ============================================================================
# Model Routing - Override default models per expert
# ============================================================================
# Format: CORTEX_MODEL_<EXPERT_NAME>=model-name
# If not set, uses the model specified in the expert's YAML profile

# FirstAttendant - Fast triage and simple tasks
# Default from profile: gpt-5-nano
CORTEX_MODEL_FIRSTATTENDANT=gpt-5-nano

# SecondThought - Complex reasoning and planning
# Default from profile: claude-sonnet-4.5
CORTEX_MODEL_SECONDTHOUGHT=claude-sonnet-4.5

# Elite - Most challenging tasks
# Default from profile: claude-opus-4
CORTEX_MODEL_ELITE=claude-opus-4

# Meta-experts (system management)
CORTEX_MODEL_META_EXPERT_RECRUITER=gpt-4o-mini
CORTEX_MODEL_META_MEMORY_SUMMARIZER=gpt-4o-mini
CORTEX_MODEL_META_PERFORMANCE_ANALYZER=deepseek-reasoner

# ============================================================================
# Model Endpoints - Custom API endpoints (optional)
# ============================================================================
# Use these if you have custom endpoints or want to use local models

# Anthropic endpoint (default: https://api.anthropic.com)
# ANTHROPIC_API_BASE=https://api.anthropic.com

# OpenAI endpoint (default: https://api.openai.com/v1)
# OPENAI_API_BASE=https://api.openai.com/v1

# DeepSeek endpoint (default: https://api.deepseek.com)
# DEEPSEEK_API_BASE=https://api.deepseek.com

# ============================================================================
# Performance Tuning
# ============================================================================

# Confidence threshold for FirstAttendant to handle task itself
CORTEX_CONFIDENCE_THRESHOLD=0.75

# Complexity threshold for escalating to Elite
CORTEX_ELITE_COMPLEXITY_THRESHOLD=0.85

# Maximum number of expert escalations before forcing Elite
CORTEX_MAX_ESCALATIONS=2

# ============================================================================
# Cost Optimization
# ============================================================================

# Enable cost tracking and reporting
CORTEX_TRACK_COSTS=true

# Alert if a single request exceeds this cost (in USD)
CORTEX_COST_ALERT_THRESHOLD=0.50

# ============================================================================
# Development/Debug
# ============================================================================

# Log level (debug, info, warn, error)
LOG_LEVEL=info

# Enable detailed cortex decision logging
CORTEX_DEBUG=false

# Dry run mode - analyze but don't execute
CORTEX_DRY_RUN=false
